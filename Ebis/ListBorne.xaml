             x:Class="Ebis.ListBorne"
             Title="Liste Borne">


    <Grid RowDefinitions="*,auto" ColumnDefinitions="*,*">

        <HorizontalStackLayout Padding="50" Spacing="15" BackgroundColor="Black">
